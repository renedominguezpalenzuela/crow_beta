                    {#poner notificacion y logs sobre los movimientos#}
                    <button type="submit" class="btn btn-primary" id="boton_go">Go</button>

                </div>
            </div>


        </div> {# Linea #}


        <div class="row">

            <div class="card">
                <div class="card-header-primary">
                    <h5>Store</h5>
                </div>
                <div class="card-body">
                    this is the Store area
                </div>
            </div>


            <div class="card">
                <div class="card-header-primary">
                    <h5>Chat</h5>
                </div>
                <div class="card-body">
                    this is the chat area
                </div>
            </div>

            <div class="card">
                <div class="card-header-primary">
                    <h5>Logs</h5>
                </div>
                <div class="card-body">
                    this is the log area
